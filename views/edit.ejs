<%- include('partials/header') %>

<h1>Edit Post</h1>

<form action="/update/<%= post.id %>" method="POST">
    <input type="text" name="title" value="<%= post.title %>" required>
    <textarea name="content" required><%= post.content %></textarea>
    <button type="submit">Update</button>
</form>

<a href="/">Cancel</a>

